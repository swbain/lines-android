<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/categoryColor"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/category"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toTopOf="@+id/category" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Caption"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintStart_toEndOf="@+id/categoryColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="category" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/categoryGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="categoryColor, category"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            app:layout_goneMarginTop="24dp"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline6"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Topic Title" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/topic_avatar_size"
            android:layout_height="@dimen/topic_avatar_size"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/subtitle"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@string/user_avatar" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/topic_avatar_size"
            android:layout_height="@dimen/topic_avatar_size"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@string/user_avatar" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/topic_avatar_size"
            android:layout_height="@dimen/topic_avatar_size"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@string/user_avatar" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/topic_avatar_size"
            android:layout_height="@dimen/topic_avatar_size"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@string/user_avatar" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/topic_avatar_size"
            android:layout_height="@dimen/topic_avatar_size"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@string/user_avatar" />

        <TextSwitcher
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            tools:text="5 replies, 2k views, last updated 3h ago"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="5 replies, 2k views, last updated 3h ago"
                android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="5 replies, 2k views, last updated 3h ago"
                android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle2"/>
        </TextSwitcher>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>